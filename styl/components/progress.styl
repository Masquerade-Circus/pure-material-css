[data-progress]
    height: .4rem;
    overflow: hidden;
    width: 100%;
    position: relative;
    &::after,&::before, &>div
        transition: all .3s ease-in-out;
        content: ' ';
        position: absolute;
        bottom: 0;
        width: 100%;
        left: 0;
        height: 100%;
        z-index: 0;
    &::after
        width: 0%;
    &>div
        position: relative;
        z-index: 1;

[data-progress~="indeterminated"]::after
    animation-fill-mode: both;
    animation: progressIndeterminate 1.6s infinite;
    animation-timing-function: linear;
