[data-progress]
    height: 4rem;
    width: 100%;
    position: relative;
    &>div,&::before
        transition: all .3s ease-in-out;
        content: ' ';
        position: absolute;
        bottom: 0;
        width: 100%;
        left: 0;
        height: 100%;
    &>div
        position: relative;

[data-progress~="indeterminated"]>div
    animation-fill-mode: both;
    animation: progressIndeterminate 1.6s infinite;
    animation-timing-function: linear;
