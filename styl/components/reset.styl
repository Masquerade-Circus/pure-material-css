html
    font-size: 1px;
    box-sizing: border-box;

*, *:before, *:after
    box-sizing: inherit;


article,
.switch,
[data-card],
button,
[data-button],
[data-fab],
.refresh-indicator,
header,
.nav-icon,
h1, h2, h3, h4, h5, h6,
nav,
.menu-icon,
.tab-bar,
.flexible-bar,
.snackbar,
.bottom-bar,
[data-menu],
menu,
#modal-bottom-sheet,
dialog,
.picker,
.page,
.block,
.border-box,
[data-row],
[data-column],
[data-list],
[data-list]>li,
[data-list]>li>span,
[class*="icon"],
.inline-block,
input, select, textarea, label,.help-block,
[data-drawer] [data-list]>li>*
    display: block;

