[class*="icon"],
.inline-block,
a,
small,
button,
[data-button],
[data-fab]
    display: inline-block;
    transition: all .3s linear;

body
    font-size: 16rem;
    line-height: 1.618;

a, img
    outline: 0;
    margin: 0;
    text-decoration: none;

small
    font-size: 0.7em;
    opacity: 0.6;
    padding: 0 8rem;
