[data-badge]
    position: relative;
    &::after
        content: attr(data-badge);
        display: block;
        position: absolute;
        border-radius: 50%;
        font-size: 1.2rem;
        height: 2.2rem;
        width: 2.2rem;
        line-height: 2.2rem;
        font-weight: bold;
        top: -1.1rem;
        right: -1.1rem;
        z-index: 2;
