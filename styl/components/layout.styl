html,body
    height: 100%;
    margin: 0;
    overflow: hidden;
    font-family: "Roboto", "Helvetica Neue", "Calibri Light", Roboto, sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;

*,:after,:before
    font-family: "Roboto", "Helvetica Neue", "Calibri Light", Roboto, sans-serif;

h1,h2,h3,h4,h5
    font-weight: 300;

body
    font-weight: 300;
    height: 100%;
    flexContainer : column;
    justify-content: space-between;

header,footer
    flex: 0 0 auto;

[data-flexible-bar]
    flex: 0 0 auto;

.tab-bar
    flex: 0 0 auto;

article,section
    flex: 1 1 auto;
    padding: 1.6rem;
    overflow-x: auto;
    z-index: 0;
    &::after, &::before
        clear: both;
        content: " ";
        display: block;

section
    overflow: auto;
    font-size: 1.4rem;
    &>[data-list]
        margin: -1.6rem;

footer,body>footer
    z-index: 3;
    order: 9999;

.page
    display: none;
    &:target
        display: initial;
