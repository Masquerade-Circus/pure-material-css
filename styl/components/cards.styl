[data-card]
    flexContainer : column;
    text-align: left;
    border-radius: .2rem;
    max-width: 36.0rem; // TODO: 264 on mobile
    margin: 0 auto;
    margin-bottom: 1.6rem;
    overflow: visible;
    padding: 0;
    &>[data-card-media]
        order: 0;
        flex: 1 1 auto;
        position: relative;
        width: 100%;
        height: 0;
        padding: 0 0 56% 0;
        overflow: hidden;
        border: 0;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: 50% 0%;
        &>header
            margin: 0;
            position: absolute;
            bottom: 0;
            top:0;
            left:0;
            right:0;
            border: 0;
            height: auto;
            z-index: 1;
            > h1, > h2, > h3
                position: absolute;
                bottom:0;
                font-size: 2.4rem;
            nav
                position: absolute;
                top:0;
                right: 0;

[data-card~="squared"]
    max-width: 25.6rem;
    min-width: 25.6rem;
    &>[data-card-media]
        padding-bottom: 100%;
        &>header
            top: auto;
            height: 6.0rem;
            text-shadow: none;
            > h1, > h2, > h3
                position: static;
                font-size: 1.6rem;
            nav
                position: static;
        &>section
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            font-size: 2.4rem;
            padding-right: 25%;
            font-weight: 400;
            margin: -.1rem;

[data-card~="full-width"]
    max-width: 100%;
