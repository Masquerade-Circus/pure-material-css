header,footer
    flexContainer : row;
    overflow: visible;
    height: 5.6rem;
    >*
        padding: .8rem;
    >[data-button]
        flex: 0 0 auto;
        padding: 1.6rem;
        &:first-child
            margin-right: -1.6rem;
    > h1, > h2, > h3
        margin: 0;
        flex: 0 0 auto;
        font-size: 1.6rem
        line-height: 1;
        padding: 2.0rem 1.6rem;

nav
    display: flex;
    flex-direction: row;
    align-items: center;
    flex-wrap: nowrap;
    justify-content: flex-end;
    flex: 1 1 auto;
    overflow: visible;
    > [data-fab~="mini"]
        margin-top: .6rem;
        margin-right: .8rem;
        box-shadow: none;
    >a,>a[data-button]
        text-transform: none;
