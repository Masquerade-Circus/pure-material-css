header
    flexContainer : row;
    overflow: visible;
    height: 56rem;
    .nav-icon
        cursor: pointer;
        order: 0;
        flex: 0 0 auto;
        padding: 16rem 0 16rem 16rem;
        line-height: 30rem;
    > h1, > h2, > h3, > h4, > h5, > h6
        margin: 0;
        order: 1;
        flex: 0 0 auto;
        font-size: 16rem
        line-height: 24rem;
        padding: 16rem;
    nav
        flexContainer : row;
        flex-wrap: nowrap;
        justify-content: flex-end;
        order: 2;
        flex: 1 1 auto;
        overflow: visible;
        padding: 8rem 16rem;
        line-height: 30rem;
        > [data-fab~="mini"]
            margin-top: 6rem;
    .menu-icon
        align-self: flex-end;
        order: 3;
        flex: 0 0 auto;
