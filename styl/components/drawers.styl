[data-drawer]
    position: fixed;
    height: 100%;
    width: 100%;
    z-index: -1;
    padding: 0;
    animation-duration: .5s;
    animation-fill-mode: both;
    animation-name: drawerclose;
    max-width: 32.0rem; // TODO: on mobile 280rem
    top: 0;
    left: 0;
    &::before
        overlay();
        content: ' ';

[data-drawer="right"]
    left: auto;
    right: 0;

[data-drawer-content]
    flexContainer: column;
    animation-duration: .5s;
    animation-fill-mode: both;
    width: calc(100% - 5.6rem);
    width: 100%;
    padding: 0; // TODO: on mobile 16rem;
    top: 0;
    left:0;
    animation-name: slideOutLeft;
    height: 100%;
    position: absolute;
    >[data-list]
        flex: 1 1 0;
        overflow: auto;
        min-height: 14.0rem;

[data-drawer="right"] [data-drawer-content]
    right:0;
    left: auto;
    animation-name: slideOutRight;

[data-button*="drawer"]:focus+[data-drawer],[data-drawer][open]
    animation-name: draweropen;
    z-index: 1;
    &::before
        opacity: 1;
        z-index: -2;
        display: block;
    [data-drawer-content]
        animation-name: slideInLeft;

[data-button*="drawer"]:focus+[data-drawer="right"],[data-drawer="right"][open]
    [data-drawer-content]
        animation-name: slideInRight;
