[data-list]
    list-style-type: none;
    text-align: left;
    margin: 0;
    padding: 0;
    font-size: 1.6rem;
    font-weight: 400;
    & > li
        display: flex;
        flex-direction: row;
        align-items: center;
        overflow: hidden;
        line-height: 1.15;
        & > *
            position: relative;
            overflow: hidden;
            padding: 1.6rem;
            color: inherit;
            height: 6.4rem;
            transition: all 0.5s linear;
            &:last-child
                order: 1;
                flex: 0 0 auto;
                width: 6.4rem;
                & > [class*="icon"]
                    font-size: 2.4rem;
                    text-align: center;
                    width: 3.2rem;
                    height: 3.2rem;
                    line-height: 3.2rem;
            &:first-child
                order: 0;
                flex: 2 1 auto;
                width: auto;
                padding: 2.2rem 1.6rem;
                & > small
                    font-weight: 300;
                    display: none;
                    margin-top: .4rem;
                    line-height: 1.42;
                    opacity: 0.8;
                    overflow: hidden;
                & > [class*="icon"]
                        height: 4.0rem;
                        width: 4.0rem;
                        border-radius: 50%;
                        font-size: 3.0rem;
                        line-height: 4.0rem;
                        margin-right: 1.6rem;
                        vertical-align: top;
                        text-align: center;
                        margin-top: -1.0rem;
                    & ~ small
                        margin-left: 5.6rem;

[data-list="two-line"]>li
    &>*:first-child
        padding: 1.4rem 1.6rem;
        &>[class*="icon"]
            margin-top: -.2rem;
    &>*:first-child>small,&>*:first-child>[class*="icon"] ~ small
        height: 1.8rem;
        display: block;

[data-list="three-line"]>li
    &>*:first-child
        padding: .8rem 1.6rem;
        &>[class*="icon"]
            margin-top: .4rem;
    &>*:first-child>small,&>*:first-child>[class*="icon"] ~ small
        height: 3.2rem;
        display: block;

[data-list="two-line"]>li>*:first-child>[class*="icon"],
[data-list="three-line"]>li>*:first-child>[class*="icon"]
    display: block;
    float: left;
