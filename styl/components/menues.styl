menu
    position: absolute;
    z-index: -1;
    opacity: 0;
    overflow: hidden;
    transition: all .2s ease-in-out;
    border-radius: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
    min-width: 256rem;
    transform: scale(0);
    transform-origin: top left;

[data-menu]
    position: relative;
    display: inline-block;

[data-menu="bottom"] menu
    transform-origin: bottom left;
    top: -200%;

[data-menu="right"] menu
    transform-origin: top right;

[data-menu="bottom-right"] menu
    transform-origin: bottom right;
    top: -200%;

[data-menu-trigger]:focus+menu,menu[open]
    display: block;
    opacity: 1;
    z-index: 8;
    transform: scale(1);

